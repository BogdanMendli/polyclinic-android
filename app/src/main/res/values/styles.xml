<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PolyclinicTheme" parent="@style/AppTheme">
        <item name="background">@color/background_primary</item>
        <item name="buttonStyle">@style/RoundedCornerButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance_SemiBold" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="TextAppearance_SemiBold.DefaultText">
        <item name="android:textColor">@color/gray_2</item>
    </style>

    <style name="FrameStyle">
        <item name="android:paddingLeft">@dimen/frame_base_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/frame_base_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/frame_base_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/frame_base_padding_vertical</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/bg_primary_button</item>
        <item name="color">#0460B4</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:stateListAnimator">@animator/button_animation</item>
    </style>

    <style name="ActionBar">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ActionBar.Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_size_toolbar</item>
        <item name="background">@drawable/toolbar_shadow</item>
    </style>

    <style name="Base_Widget.Styled.ActionBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?actionBarTitleColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_default_plus_5</item>
    </style>

    <style name="Widget.Styled.ActionBar.Title" parent="Base_Widget.Styled.ActionBar.Title">
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
    </style>

    <style name="RegInputHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_default_minus_2</item>
    </style>

    <style name="BaseRegInput">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textColorHint">#999</item>
        <item name="android:textSize">@dimen/text_size_default_plus_2</item>
        <item name="android:fontFamily" tools:ignore="newApi">sans-serif</item>
    </style>

    <style name="RegInputPasswordHint" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/RegInputHint</item>
        <item name="android:textColorHint">@color/gray_3</item>
    </style>

    <style name="BaseRegInput.Password">
        <item name="android:imeOptions">flagNoExtractUi|actionGo</item>
        <item name="android:inputType">textPassword|textNoSuggestions</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">-2dp</item>
    </style>
</resources>
